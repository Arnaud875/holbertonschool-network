#!/usr/bin/env bash

# Display a header for better readability
echo "Active Internet connections (only servers)"
echo "Proto Recv-Q Send-Q Local Address           Foreign Address         State       PID/Program name"

# Use `ss` to list all listening sockets with their process information
ss -lntup | awk '
NR>1 {
    printf "%-8s %-7s %-7s %-23s %-23s %-11s %-15s\n", $1, $2, $3, $4, $5, $6, $7
}'

# Display a header for UNIX Domain sockets
echo "Active UNIX domain sockets (only servers)"
echo "Proto RefCnt Flags       Type       State         I-Node   PID/Program name    Path"

# Use `ss` to list UNIX domain sockets
ss -lxp | awk '
NR > 1 {
    printf "%-6s %-6s %-11s %-10s %-13s %-8s %-18s %s\n", $1, $2, $3, $4, $5, $6, $7, $8
}'
